<!-- create a form for registering a new category -->
<section class='admin-categories-new'>
  <header>
    <h1>Admin &raquo; New Category</h1>
  </header>

  <div class='well'>
    <%= link_to 'All Categories', %i[admin categories], class: 'btn btn-info' %>
  </div>

  <main class='row'>
    <div class='col-sm-6 col-sm-offset-1'>
      <!-- `form_for` 'categories' table under 'admin' namespace -->
      <%= form_for [:admin, @category] do |form| %>
      <div class='form-group'>
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <%= form.submit 'Create Category', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </main>
</section>